            cls2: COLORS[Math.floor(Math.random() * COLORS.length)] + " " + ANIM[Math.floor(Math.random() * ANIM.length)],
            cls3: COLORS[Math.floor(Math.random() * COLORS.length)] + " " + ANIM[Math.floor(Math.random() * ANIM.length)],
        }
    }
</script>