<style>
    .bg {

        opacity: 1;
        background-image: radial-gradient(#000000 1.05px, #ffffff00 1.05px);
        background-size: 21px 21px;
    }
</style>

<div class="relative">
  
    <div class="card border-2 py-10 px-6 md:px-16">
        <h2 class="hidden headline text-center">Free Website Analysis Report</h2>
        <div class="flex justify-center hidden">
            <p class="mt-2 text-center">
            </p>
        </div>

        <form class="space-y-6" name="websiteAnalysisForm" action="/thanks" netlify>

            <div class="mt-6">
                <label class="label" for="url">Website URL</label>
                <input name="url" required
                    class="w-full border border-300-gray px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                    id="url" type="url" placeholder="webstie url">
            </div>
            <div>
                <label class="label" for="email">Email</label>
                <input name='email' required
                    class="w-full border border-300-gray px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                    id="email" type="email" placeholder="Email">
            </div>
            <div>
                <label class="label" for="message">Tell me about your website goals</label>
                <textarea
                name='message' required
                    class="w-full border border-300-gray px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                   type="text" placeholder="Your Message" id="message" cols="30"
                    rows="10"></textarea>
            </div>
            <button type="submit"
                class="w-full btn-primary">
                Get a Free Website Analysis Report
            </button>

        </form>
    </div>
</div>