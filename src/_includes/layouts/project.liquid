---
layout: layouts/wrapper.liquid
---

<div class="container">
    {% include 'components/header', text: title, sub: description %}
    <div class="mt-12 md:mt-32 md:flex md:justify-between md:items-start">
        <div class="">
            <div class="prose md:prose-lg">
                {{ content | safe }}
            </div>

        </div>

        <div class="w-full md:w-1/3 mt-24 md:mt-0">
            <div x-data="card()" class="relative">
                <div :class="{ [cls1]: true}" class="absolute top-0 -left-4 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl opacity-75 animate-blob">
                </div>
                <div :class="{ [cls2]: true}"
                    class="absolute top-0 -right-4 w-72 h-72 bg-amber-300 rounded-full mix-blend-multiply filter blur-xl opacity-75 animate-blob">
                </div>
                <div :class="{ [cls3]: true}"
                    class="absolute left-20 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-75 animate-blob">
                </div>
                <div class="card p-5 space-y-2">

                    <div class="flex justify-start items-baseline">
                        <label class="label mr-4 ">Client:</label>
                        <span class="font-semibold">{{ client }}</span>
                    </div>

                    <div class="flex justify-start items-baseline">
                        <label class="label mr-4 ">Industry:</label>
                        <span class="font-semibold">{{ industry }}</span>
                    </div>

                    <div class="flex justify-start items-baseline">
                        <label class="label mr-4 ">Location:</label>
                        <span class="font-semibold">{{ location }}</span>
                    </div>

                    <div class="flex justify-start items-baseline">
                        <label class="label mr-4 ">Project URL:</label>
                        <a href="{{ project_url }}" target="_blank" class="font-semibold flex items-center border-b-2 border-transparent hover:border-gray-900">Website
                            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                                <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                              </svg> </a>
                    </div>

                    <div>
                        <label class="label" for="tags">Stack:</label>
                        <div class="mt-1 space-x-1" id="tags">
                            {% for tag in stack %}
                            <span
                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-900 text-gray-50">
                                {{ tag }}
                            </span>
                            {%endfor %}
                        </div>
                    </div>


                </div>
            </div>

            {% if review %}
            <div class="mt-24 md:mt-64">
                {% include 'components/review_card', text: review_text, name: reviewer, src: reviewer_img %}
            </div>
            {% endif %}

        </div>

    </div>

    <div class="mt-32">
        {% include 'blocks/cta' %}
    </div>
    

</div>

<script>
    function card() {
        return {
            cls1: COLORS[Math.floor(Math.random() * COLORS.length)],
            cls2: COLORS[Math.floor(Math.random() * COLORS.length)] + " " + ANIM[Math.floor(Math.random() * ANIM.length)],
            cls3: COLORS[Math.floor(Math.random() * COLORS.length)] + " " + ANIM[Math.floor(Math.random() * ANIM.length)],
        }
    }
</script>